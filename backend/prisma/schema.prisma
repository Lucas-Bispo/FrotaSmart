generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  cpf      String  @unique
  senha    String
  isAdmin  Boolean @default(false)
}

model Secretaria {
  id    Int    @id @default(autoincrement())
  nome  String
  motoristas Motorista[]
  veiculos   Veiculo[]
}

model Motorista {
  id           Int        @id @default(autoincrement())
  cpf          String     @unique
  nome         String
  cnh          String
  secretaria   Secretaria @relation(fields: [secretariaId], references: [id])
  secretariaId Int
}

model Veiculo {
  id           Int        @id @default(autoincrement())
  placa        String     @unique
  tipo         String
  secretaria   Secretaria @relation(fields: [secretariaId], references: [id])
  secretariaId Int
}

model Locacao {
  id          Int      @id @default(autoincrement())
  veiculoId   Int
  motoristaId Int
  dataInicio  DateTime
  dataFim     DateTime?
  destino     String
  km          Float?
  veiculo     Veiculo  @relation(fields: [veiculoId], references: [id])
  motorista   Motorista @relation(fields: [motoristaId], references: [id])
}