generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int     @id @default(autoincrement())
  cpf     String  @unique
  senha   String
  isAdmin Boolean @default(false)
}

model Secretaria {
  id        Int         @id @default(autoincrement())
  nome      String      @unique
  motoristas Motorista[]
  veiculos  Veiculo[]
}

model Motorista {
  id           Int        @id @default(autoincrement())
  cpf          String     @unique
  nome         String
  cnh          String     @unique
  secretariaId Int
  secretaria   Secretaria @relation(fields: [secretariaId], references: [id])
}

model Veiculo {
  id           Int        @id @default(autoincrement())
  placa        String     @unique
  tipo         String     // "Ã´nibus", "carro", "van"
  secretariaId Int
  secretaria   Secretaria @relation(fields: [secretariaId], references: [id])
}